@{
    ViewData["Title"] = "Área Administrativa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="jumbotron jumbotron-fluid pt-3">
    <div class="container">
        <h1 class="display-4">Área Administrativa</h1>
        <p class="lead">Seja bem vindo Administrador! Utilize o menu lateral ou botões abaixo ter
            acesso aos diferentes cadastros do portal!</p>
        <hr class="my-4">

        <div class="row g-4">
            
            <div class="col-md-4 card-hover">
                <a class="btn btn-dark p-0" asp-action="Index" asp-controller="Eventos">
                    <div class="card bg-dark text-white">
                        <img src="/img/categorias/1.jpg" class="w-100 rounded-top-2" alt="Eventos">
                        <div class="card-body">
                            <h5 class="card-title">Eventos</h5>
                            
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 card-hover">
                <a class="btn btn-dark p-0" asp-action="Index" asp-controller="Lojas">
                    <div class="card bg-dark text-white">
                        <img src="/img/categorias/1.jpg" class="w-100 rounded-top-2" alt="Lojas">
                        <div class="card-body">
                            <h5 class="card-title">Lojas</h5>
                            
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 card-hover">
                <a class="btn btn-dark p-0" asp-action="Index" asp-controller="Marcas">
                    <div class="card bg-dark text-white">
                        <img src="/img/categorias/1.jpg" class="w-100 rounded-top-2" alt="Marcas">
                        <div class="card-body">
                            <h5 class="card-title">Marcas</h5>
                            
                        </div>
                    </div>
                </a>
            </div>
            
        </div>
    </div>
</div>